<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Budgets</h1>
    <%= link_to "New Budget", new_budget_path, class: "btn btn-primary" %>
  </div>

  <% if @budgets.any? %>
    <div class="card">
      <div class="card-body">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>Month</th>
              <th>Category</th>
              <th class="text-end">Limit</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @budgets.each do |budget| %>
              <tr>
                <td>
                  <%= budget.month.strftime("%B %Y") %>
                </td>
                <td>
                  <span class="badge bg-secondary">
                    <%= budget.category.name %>
                  </span>
                </td>
                <td class="text-end">
                  <strong><%= number_to_currency(budget.limit_amount, unit: "â‚¬") %></strong>
                </td>
                <td class="text-end">
                  <%= link_to "Edit", edit_budget_path(budget),
                        class: "btn btn-sm btn-outline-primary" %>
                  <%= link_to "Delete", budget,
                        method: :delete,
                        data: { confirm: "Are you sure?" },
                        class: "btn btn-sm btn-outline-danger ms-1" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info">
      No budgets created yet. Click <strong>New Budget</strong> to set your first monthly limit.
    </div>
  <% end %>
</div>
